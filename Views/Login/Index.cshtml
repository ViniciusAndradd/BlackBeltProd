@model BlackBelt.Models.Usuario
@using System.Text.Json
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - Black Belt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Login.css" rel="stylesheet">
</head>

<body class="navbar-dark bg-dark">

    <div class="bg-login d-flex justify-content-center align-items-center">
        <div class="text-center login-container">
            <img src="~/images/01.png" alt="Logo" class="logo-img" />
            <div class="logo-text">BLACK <span>BELT</span></div>

            <!--adicionando msg de erro de login-->
            @if (TempData["ErroLogin"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErroLogin"]
                </div>
            }

            <form asp-action="Logar" asp-controller="Login" method="post" class="mt-4">
                <div class="mb-3">
                    <input type="text" class="form-control" asp-for="Cpf" placeholder="Insira seu CPF" id="cpfInput">
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" asp-for="Senha" placeholder="Insira sua senha">
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-login">Entrar</button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#cpfInput').mask('000.000.000-00');
            $('form').on('submit', function () {
                const rawCpf = $('#cpfInput').val().replace(/\D/g, '');
                $('#cpfInput').val(rawCpf);
            });
        });
    </script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
